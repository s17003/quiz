<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".DifficultQuiz">

    <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/colorbackground"
            android:id="@+id/question" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/select1" android:text="@string/question" android:textSize="18sp"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp" android:textAlignment="viewStart"/>
    <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/select1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/select2"
            app:layout_constraintTop_toBottomOf="@+id/question" android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"/>
    <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/select2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/select1"
            app:layout_constraintBottom_toTopOf="@+id/select3" android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"/>
    <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/select3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/select2"
            app:layout_constraintBottom_toTopOf="@+id/select4" android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"/>
    <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/select4" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/select3" android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"/>
</android.support.constraint.ConstraintLayout>